@model IEnumerable<PracticeProject.Models.EnrollmentModel>
<table class="table" id="enrollmentTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EnrollmentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* added pagination, sorting, filtering *@
<link href="~/lib/DataTables/datatables.min.css" rel="stylesheet">
<script src="~/lib/DataTables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#enrollmentTable').DataTable();
    });
</script>